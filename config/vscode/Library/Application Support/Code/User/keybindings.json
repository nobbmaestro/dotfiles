[
	// Trigger IntelliSense suggestions
	{
		"key": "alt+space",
		"command": "editor.action.triggerSuggest"
	},

	// Project and file navigation 
	{
		"key": "ctrl+f",
		"command": "projectManager.listGitProjects#sideBarGit"
	},
	{
		"key": "ctrl+p",
		"command": "workbench.action.quickOpen"
	},
	{
		"key": "cmd+p",
		"command": "-workbench.action.quickOpen"
	},

	// Open and toggle terminal
	{
		"key": "ctrl+c",
		"command": "workbench.action.terminal.toggleTerminal"
	},

	// On escape, abort explorer (leader+p+v) and in files search (leader+p+s)
	{
		"key": "escape",
		"command": "workbench.action.closeSidebar",
		"when": "(filesExplorerFocus && !inputFocus) || searchInputBoxFocus"
	},

	// Navigation between splits
	{
		"key": "ctrl+h",
		"command": "workbench.action.navigateLeft"
	},
	{
		"key": "ctrl+l",
		"command": "workbench.action.navigateRight"
	},
	{
		"key": "ctrl+k",
		"command": "workbench.action.navigateUp"
	},
	{
		"key": "ctrl+j",
		"command": "workbench.action.navigateDown"
	},

	// Explorer file manipulation
	{
		"key": "shift+5",
		"command": "explorer.newFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "d",
		"command": "explorer.newFolder",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "shift+R",
		"command": "renameFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "shift+d",
		"command": "deleteFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "y",
		"command": "filesExplorer.copy",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "x",
		"command": "filesExplorer.cut",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "p",
		"command": "filesExplorer.paste",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "v",
		"command": "explorer.openToSide",
		"when": "filesExplorerFocus && !inputFocus"
	},

	// Harpoon
	{
		"key": "ctrl+e",
		"command": "vscode-harpoon.editorQuickPick"
	},
	{
		"key": "ctrl+,",
		"command": "vscode-harpoon.gotoEditor1"
	},
	{
		"key": "ctrl+.",
		"command": "vscode-harpoon.gotoEditor2"
	},
	{
		"key": "ctrl+-",
		"command": "vscode-harpoon.gotoEditor3"
	},
	{
		"key": "cmd+i",
		"command": "-editor.action.triggerSuggest",
		"when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
	}
]
